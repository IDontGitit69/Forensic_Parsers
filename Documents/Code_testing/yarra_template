rule Example_Rule {
    meta:
        // === Required fields ===
        author          = "Jane Doe"
        date            = "2025-10-03"
        last_modified   = "2025-10-03"
        category        = "malware"
        description     = "Detects XYZ malware variant"
        classification  = "TLP:AMBER"

        // === Optional but recommended ===
        reference       = "https://attack.mitre.org/techniques/T1059/"
        version         = "1.0"
        hash            = "abcdef123456..."

    strings:
        $a = "malicious string here"

    condition:
        $a
}
